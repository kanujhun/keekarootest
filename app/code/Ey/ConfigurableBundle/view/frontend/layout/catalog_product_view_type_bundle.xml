<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.bundle.options">
            <block class="Ey\ConfigurableBundle\Block\Catalog\Product\View\Type\Bundle\Option\Configurable" name="product.info.bundle.options.configurable" as="configurable">
                <block class="Ey\ConfigurableBundle\Block\Catalog\Product\Pricing\Render" name="configurable.bundle.price.final">
                    <arguments>
                        <argument name="price_render" xsi:type="string">product.price.render.default</argument>
                        <argument name="price_type_code" xsi:type="string">final_price</argument>
                        <argument name="zone" xsi:type="string">item_view</argument>
                    </arguments>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>